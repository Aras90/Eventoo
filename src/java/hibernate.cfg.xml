<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/eventoo_db</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">sql</property>
    <property name="hibernate.hbm2ddl.auto">update</property>
    <mapping resource="model/UserMapping.hbm.xml"/>
    <mapping resource="model/RatingMapping.hbm.xml"/>
    <mapping resource="model/PictureMapping.hbm.xml"/>
    <mapping resource="model/InvitationMapping.hbm.xml"/>
    <mapping resource="model/EventMapping.hbm.xml"/>
    <mapping resource="model/CommentMapping.hbm.xml"/>
    <mapping resource="model/AlbumMapping.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
