<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class dynamic-insert="false" dynamic-update="false" mutable="true" name="model.Invitation" optimistic-lock="version" polymorphism="implicit" select-before-update="false" table ="Invitation">
      <id column="Id_Invitation" name="Id_Invitation" type = "integer"></id>
      <property column="CreatedAt" name ="CreatedAt" type = "string"></property>
      <many-to-one name="Id_User" column="Id_User" class="model.User" foreign-key="fk_invitation_user" ></many-to-one>
      <many-to-one name="Id_Event" column="Id_Event" class="model.Event" foreign-key="fk_invitation_event" ></many-to-one>
  </class>
</hibernate-mapping>